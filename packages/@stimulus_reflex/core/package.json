{
  "name": "@stimulus_reflex/core",
  "version": "3.4.0-dev.4",
  "description": "StimulusReflex: Core library",
  "repository": "https://github.com/hopsoft/hopsoft",
  "homepage": "https://docs.stimulusreflex.com/",
  "bugs": "https://github.com/hopsoft/stimulus_reflex/issues",
  "license": "MIT",
  "author": "Nathan Hopkins <natehop@gmail.com>",
  "source": "index.js",
  "main": "dist/core.js",
  "module": "dist/core.module.js",
  "esmodule": "dist/core.modern.js",
  "scripts": {
    "prepare": "yarn build",
    "prettier-standard:check": "yarn run prettier-standard --check *.js **/*.js",
    "prettier-standard:format": "yarn run prettier-standard *.js **/*.js",
    "test": "yarn run mocha --require @babel/register --require esm ./test",
    "build": "microbundle --target browser --format modern,es,cjs --no-strict",
    "dev": "microbundle watch --target browser --format modern,es,cjs --no-strict",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "@rails/actioncable": ">= 6.0",
    "cable_ready": ">= 4.3.0",
    "stimulus": ">= 1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "@rails/actioncable": "^6.0.3-3",
    "assert": "^2.0.0",
    "cable_ready": "^4.4.0-pre0",
    "esm": "^3.2.25",
    "jsdom": "^16.0.1",
    "microbundle": "^0.12.3",
    "mocha": "^8.0.1",
    "prettier-standard": "^16.1.0",
    "stimulus": "^1.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
