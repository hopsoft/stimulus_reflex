{
  "name": "@stimulus_reflex/polyfills",
  "version": "3.4.0-dev.4",
  "description": "Polyfills to support StimulusReflex in older browsers",
  "homepage": "https://docs.stimulusreflex.com/",
  "bugs": "https://github.com/hopsoft/stimulus_reflex/issues",
  "repository": "https://github.com/hopsoft/stimulus_reflex",
  "license": "MIT",
  "author": "Nathan Hopkins <natehop@gmail.com>",
  "source": "index.js",
  "main": "dist/polyfills.js",
  "module": "dist/polyfills.module.js",
  "esmodule": "dist/polyfills.modern.js",
  "scripts": {
    "prepare": "yarn build",
    "prettier-standard:check": "yarn run prettier-standard --check *.js **/*.js",
    "prettier-standard:format": "yarn run prettier-standard *.js **/*.js",
    "clean": "rimraf dist",
    "build": "microbundle --target browser --format modern,es,cjs --no-strict",
    "dev": "microbundle watch --target browser --format modern,es,cjs --no-strict"
  },
  "dependencies": {
    "@stimulus/polyfills": "^1.1.1",
    "@webcomponents/template": "^1.4.4",
    "core-js": "^3.4.0",
    "formdata-polyfill": "^3.0.20"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "esm": "^3.2.25",
    "microbundle": "^0.12.4",
    "prettier-standard": "^16.4.1",
    "rimraf": "^3.0.2"
  }
}
